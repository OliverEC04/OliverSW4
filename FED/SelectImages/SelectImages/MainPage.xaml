<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SelectImages.MainPage">
    <ScrollView BackgroundColor="#282c34">
        <Grid RowDefinitions="100, 100, 100, 100, 100"
              ColumnDefinitions="600, 600"
              RowSpacing="20"
              ColumnSpacing="20"
              HorizontalOptions="Center"
              Margin="0, 100, 0, 0">
            <Label Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   FontSize="30"
                   Text="Child porn uploader" />
            <Button Grid.Row="1"
                    Grid.Column="0"
                    HeightRequest="60"
                    WidthRequest="200"
                    Text="Select child porn"
                    Clicked="OnSelectBtn" />
            <Entry Grid.Row="2"
                   Grid.Column="0"
                   HeightRequest="40"
                   BackgroundColor="#21252b"
                   Placeholder="Enter title"
                   x:Name="TitleEntry" />
            <Editor Grid.Row="3"
                    Grid.Column="0"
                    BackgroundColor="#21252b"
                    Placeholder="Enter description"
                    x:Name="DescEditor" />
            <Button Grid.Row="4"
                    Grid.Column="0"
                    HeightRequest="60"
                    WidthRequest="200"
                    Text="Add child porn"
                    Clicked="OnAddBtn" />
            <Image Grid.Row="0"
                   Grid.Column="1"
                   x:Name="SelectedImage"/>
        </Grid>
    </ScrollView>
</ContentPage>
