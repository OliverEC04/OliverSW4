<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiStockTake.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiStockTake.UI.Pages"
    xmlns:local="clr-namespace:MauiStockTake.UI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab
            Title="Input"
            Icon="input_icon.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:InputPage}" />
        </Tab>

        <Tab
            Title="Report"
            Icon="report_icon.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:ReportPage}" />
        </Tab>
    </TabBar>
</Shell>